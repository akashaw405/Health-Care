<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/>
            <gradient android:startColor="#005BBB" android:endColor="#003F88" android:angle="270"/>
            <solid android:color="#003F88"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/>
            <gradient android:startColor="#007BFF" android:endColor="#005BBB" android:angle="270"/>
        </shape>
    </item>

</selector>
