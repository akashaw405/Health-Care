<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".activities.BMRActivity">

    <!-- Top App Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/top_bar_background"
        android:elevation="8dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/topTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMR Calculator"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_close"
            app:tint="@android:color/white" />
    </RelativeLayout>

    <!-- BMR Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBMR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:background="@drawable/glass_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMR Calculator"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center" />

            <!-- Input Fields -->
            <EditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_input"
                android:hint="Weight (kg)"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_input"
                android:hint="Height (cm)"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_input"
                android:hint="Age (years)"
                android:inputType="number"
                android:padding="15dp"
                android:textSize="16sp" />

            <!-- Gender Selection -->
            <RadioGroup
                android:id="@+id/radioGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="16sp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Female"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnCalculateBMR"
                    android:layout_width="160dp"
                    android:layout_height="55dp"
                    android:background="@drawable/gradient_button"
                    android:text="Calculate"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/btnExplore1"
                    android:layout_width="160dp"
                    android:layout_height="55dp"
                    android:background="@drawable/gradient_button"
                    android:text="Explore"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- BMR Result -->
            <TextView
                android:id="@+id/tvBMRResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
