<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Reminder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <ImageView
        android:id="@+id/img_water"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_water"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btn_pick_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Reminder Time"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_water"
        android:layout_marginTop="40dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tv_selected_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No time selected"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@id/btn_pick_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btn_set_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Water Reminder"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_selected_time"
        android:layout_marginTop="20dp"
        android:padding="10dp" />

</RelativeLayout>
