<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/top_bar_background"
            android:elevation="8dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/topTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yoga Guide"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_close" />
        </RelativeLayout>

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yoga Video Tutorials 🎥"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <!-- Video Cards -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/glass_card">

            <WebView
                android:id="@+id/webView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/glass_card">

            <WebView
                android:id="@+id/webView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <!-- Yoga Benefits -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✨ Benefits of Yoga"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:layout_marginTop="10dp"
            android:padding="18dp"
            android:background="@drawable/glass_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✔️ Improves Flexibility\n✔️ Boosts Mental Health\n✔️ Enhances Strength\n✔️ Reduces Stress and Anxiety\n✔️ Promotes Better Sleep"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <!-- Yoga Poses -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🧘‍♂️ Popular Yoga Poses"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            android:layout_marginTop="10dp"
            android:padding="18dp"
            android:background="@drawable/glass_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1️⃣ Downward Dog - Improves posture and strength\n2️⃣ Cobra Pose - Relieves back pain\n3️⃣ Child's Pose - Reduces stress and calms the mind\n4️⃣ Warrior Pose - Builds stamina and balance\n5️⃣ Tree Pose - Enhances concentration"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnExploreYoga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore More"
                android:background="@drawable/gradient_button"
                android:padding="12dp"
                android:layout_marginEnd="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
