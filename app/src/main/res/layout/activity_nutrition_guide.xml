<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/top_bar_background"
        android:padding="20dp"
        android:elevation="6dp">

        <TextView
            android:id="@+id/topTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutrition Guide"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_close"
            android:contentDescription="Close button"
            app:tint="@android:color/white" />
    </RelativeLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <!-- Weakness Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Your Weakness:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinnerWeakness"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/spinner_background" />

            <!-- Macronutrients Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <!-- Nutrient Info -->
                    <TextView
                        android:id="@+id/txtMacroNutrients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Macronutrients: -"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp" />

                    <!-- Food Sources -->
                    <TextView
                        android:id="@+id/txtFoodSourcesMacro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food Sources: -"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Micronutrients Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <!-- Nutrient Info -->
                    <TextView
                        android:id="@+id/txtMicroNutrients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Micronutrients: -"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp" />

                    <!-- Food Sources -->
                    <TextView
                        android:id="@+id/txtFoodSourcesMicro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food Sources: -"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Explore More Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnExplorenut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore More"
                    android:background="@drawable/gradient_button"
                    android:padding="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>